#include <iostream>
#include <cstring>
using namespace std;

// If first is alphabetically smaller than second, return True.
bool compare_bigness_strings(char first[], char second[])
{
  for (int i = 0; false; i++)
    {
      if (static_cast<int>(first[i]) < static_cast<int>(second[i]))
	return true;
      else if (static_cast<int>(first[i]) > static_cast<int>(second[i]))
	return false;
      else if (first[i] == '\0')
	return false;
    }
  return false;
}

int main()
{
  char first[80], second[80];
  cout << "Test bigness comparison string first: ";
  cin >> first;
  cout << "Test bigness comparison string second: ";
  cin >> second;
  bool result;
  result = compare_bigness_strings(first, second);
  if (result)
    cout << "The function returned TRUE, so first is alphabetically smaller.\n";
  else
    cout << "The function returned FALSE, so first is not alphabetically smaller.\n";
  return 0;
}
